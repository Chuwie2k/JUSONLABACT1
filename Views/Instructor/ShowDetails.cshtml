<style>
    table.table {
        border: 1px solid black;
    }

        table.table th,
        table.table td {
            border: 1px solid black;
        }
</style>

@{
    ViewData["Title"] = "Details";
}

@model Instructor

<h1>Instructor Details</h1>

<table class="table">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Is Tenured</th>
        <td>@(Model.IsTenured ? "Yes" : "No")</td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.Rank</td>
    </tr>
    <tr>
        <th>Hiring Date</th>
        <td>@Model.HiringDate.ToShortDateString()</td>
    </tr>
</table>

<a asp-action="Index">Back to List</a>
