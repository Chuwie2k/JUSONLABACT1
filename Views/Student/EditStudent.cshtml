@model JUSONITELEC1CLAB2.Models.Instructor2

<h2>Edit Instructor</h2>

<form asp-action="EditStudent" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" class="form-control">
            @foreach (var courseOption in Enum.GetValues(typeof(JUSONITELEC1CLAB2.Models.Course)))
            {
                <option value="@courseOption">@courseOption</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EnrollmentDate">Enrollment Date</label>
        <input type="date" asp-for="EnrollmentDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update Instructor</button>
</form>
