<style>
    table.table {
        border: 1px solid black;
    }

        table.table th {
        font-size: 20px;
        font-family: verdana, sans-serif;
        border: 1px solid black;
        }
        table.table td {
            font-family: verdana, sans-serif;
            border: 1px solid black;
        }
</style>
@{
    ViewData["Title"] = "Instructors";
}

@model List<Instructor>

<div class="text-center">
    <h1 class="display-4">Instructor</h1>
</div>

<br>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Is Tenured</th>
            <th>Rank</th>
            <th>Hiring Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Id</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@(instructor.IsTenured ? "Yes" : "No")</td>
                <td>@instructor.Rank</td>
                <td>@instructor.HiringDate.ToShortDateString()</td>
                <td>
                    <a asp-action="ShowDetails" asp-route-id="@instructor.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>